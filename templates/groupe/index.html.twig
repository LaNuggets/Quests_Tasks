{% extends 'base.html.twig' %}

{% block title %}Groupe : {{ groupe.nom }}{% endblock %}

{% block body %}
    <h1>Groupe : {{ groupe.nom }}</h1>
    <p>Date de cr√©ation : {{ groupe.dateCreation|date('d/m/Y') }}</p>
    <p>Score : {{ groupe.score }}</p>

    <h2>Membres du groupe :</h2>
    <ul>
        {% for membre in membres %}
            <li>{{ membre.pseudo }}</li>
        {% else %}
            <li>Aucun membre pour le moment.</li>
        {% endfor %}
    </ul>

    <h3>Ajouter un utilisateur au groupe :</h3>
    <form method="get" action="{{ path('app_groupe_ajouter_utilisateur', { groupeId: groupe.id, userId: 0 }) }}">
        <label for="userId">ID de l'utilisateur :</label>
        <input type="number" name="userId" id="userId" required>
        <button type="submit">Ajouter</button>
    </form>

    <a href="{{ path('app_profil') }}">Retour au profil</a>
{% endblock %}